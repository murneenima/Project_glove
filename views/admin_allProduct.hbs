    <!-- ////////////////////////////////////// Script ///////////////////////////////////////// -->
    <script>
        $('#year').text("" + new Date().getFullYear());

        var dataProduct = "{{dataProduct}}"
        var decode_productdata = JSON.parse(decodeURI(dataProduct))
        var productdata = [];

        for (let i = 0; i < decode_productdata.length; i++) {
            productdata.push(decode_productdata[i])
            //console.log('product ' + i + ': ', productdata[i])
        }

        display();
        function display() {
            let display_product = "<thead><th>No</th><th>Product ID</th><th>Product Type</th><th>Size</th><th>Standard Weight </th><th>Standard Length</th><th>Edit</th><th>Delete</th> </thead>";
            for (let i = 0; i < productdata.length; i++) {
                display_product += "<tbody><tr><td>" + (i + 1) + "</td><td>" + productdata[i].product_id + "</td><td>" + productdata[i].product_type + "</td><td>" + productdata[i].product_size + "</td><td>" + productdata[i].weight_min + "-" + productdata[i].weight_max + "</td><td>" + productdata[i].length_min + "-" + productdata[i].length_max + "</td><td><p data-placement='top' data-toggle='tooltip' title='Edit'><button class='btn btn-primary btn-xs'  onclick='ShowModal_Edit(" + i + ")' data-title='Edit' data-toggle='modal' data-target='#edit' ><i class='fas fa-edit'></i></button></p></td><td><p data-placement='top' data-toggle='tooltip' title='Delete'><button onclick='ShowModal_delete(" + i + ")' class='btn btn-danger btn-xs' data-title='Delete' data-toggle='modal'><i class='fas fa-trash-alt'></i></button></p></td></tr></tbody>"
            }

            document.getElementById("table_product").innerHTML = display_product;
        }

        // edit 
        function ShowModal_Edit(index) {
            $('#edit').data('curid', index); // curid = index
            $('#edit').modal('show');
            document.getElementById("product_id").value = productdata[index].product_id
            document.getElementById("product_type").value = productdata[index].product_type
        }


        // get index to delete
        function ShowModal_delete(index) {
            $('#delete').data('curid', index); // curid = index
            $('#delete').modal('show');
        }
        // delete product data
        function POST_Remove() {
            let index = $('#delete').data('curid')
            let id = productdata[index].product_id
            console.log('Product will delete at ' + id)
            $.ajax('http://10.7.4.158:3000/removeproduct', {
                data: JSON.stringify({ id }),
                contentType: 'application/json',
                type: 'POST',
            })
            alert(' ProDuct ID : ' + id + ' was deleted')
            location.reload();
        }

        // --------------- reload page
        function reloadpage() {
            alert('Edit data Success')
            window.location.search += '&param=42';

        }


    </script>
